{
  "name": "@gesslar/wrapify",
  "description": "A text wrapping script.",
  "author": {
    "name": "gesslar",
    "email": "bmw@gesslar.dev",
    "url": "https://gesslar.dev"
  },
  "version": "1.8.1",
  "license": "Unlicense",
  "homepage": "https://github.com/gesslar/wrapify#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gesslar/wrapify.git"
  },
  "keywords": [
    "wrap",
    "word-wrap",
    "text",
    "format"
  ],
  "engines": {
    "node": ">=22"
  },
  "type": "module",
  "main": "./wrapify.js",
  "module": "./wrapify.js",
  "types": "./wrapify.d.ts",
  "exports": {
    ".": {
      "types": "./wrapify.d.ts",
      "import": "./wrapify.js",
      "default": "./wrapify.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "src/",
    "UNLICENSE.txt"
  ],
  "scripts": {
    "test": "node --test 'tests/**/*.test.js'",
    "lint": "eslint src/wrapify.js",
    "lint:fix": "eslint src/wrapify.js --fix",
    "types": "node -e \"require('fs').rmSync('types',{recursive:true,force:true});\" && tsc -p tsconfig.types.json",
    "clean": "rm -rfv ./dist",
    "build": "npm run clean && mkdir -pv ./dist && npm pack --pack-destination ./dist/",
    "update": "npx npm-check-updates -u && npm install",
    "submit": "npm publish --access public --//registry.npmjs.org/:_authToken=\"${NPM_ACCESS_TOKEN}\"",
    "pr": "gt submit -p --ai",
    "patch": "npm version patch",
    "minor": "npm version minor",
    "major": "npm version major"
  },
  "devDependencies": {
    "@gesslar/uglier": "^2.0.0",
    "eslint": "^10.0.2",
    "typescript": "^5.9.3"
  }
}
