{
  "name": "@gesslar/wrapify",
  "description": "A text wrapping script.",
  "author": {
    "name": "gesslar",
    "email": "bmw@gesslar.dev",
    "url": "https://gesslar.dev"
  },
  "version": "1.5.0",
  "license": "Unlicense",
  "homepage": "https://github.com/gesslar/wrapify#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gesslar/wrapify.git"
  },
  "keywords": [
    "wrap",
    "word-wrap",
    "text",
    "format"
  ],
  "packageManager": "pnpm@10.26.2",
  "engines": {
    "node": ">=22"
  },
  "type": "module",
  "main": "./wrapify.js",
  "module": "./wrapify.js",
  "types": "./wrapify.d.ts",
  "exports": {
    ".": {
      "types": "./wrapify.d.ts",
      "import": "./wrapify.js",
      "default": "./wrapify.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "src/",
    "UNLICENSE.txt"
  ],
  "scripts": {
    "lint": "eslint src/wrapify.js",
    "lint:fix": "eslint src/wrapify.js --fix",
    "clean": "rm -rfv ./dist",
    "build": "pnpm run clean && mkdir -pv ./dist && pnpm pack --pack-destination ./dist/",
    "update": "pnpm up --latest --recursive",
    "submit": "pnpm publish --access public --//registry.npmjs.org/:_authToken=\"${NPM_ACCESS_TOKEN}\"",
    "pr": "gt submit -p --ai",
    "patch": "pnpm version patch",
    "minor": "pnpm version minor",
    "major": "pnpm version major"
  },
  "devDependencies": {
    "@gesslar/uglier": "^0.4.0",
    "eslint": "^9.39.2"
  }
}
