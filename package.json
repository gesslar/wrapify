{
  "name": "@gesslar/wrapify",
  "version": "1.0.0",
  "description": "A text wrapping script.",
  "type": "module",
  "main": "./wrapify.js",
  "module": "./wrapify.js",
  "types": "./wrapify.d.ts",
  "exports": {
    ".": {
      "types": "./wrapify.d.ts",
      "import": "./wrapify.js",
      "default": "./wrapify.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "wrapify.js",
    "wrapify.d.ts"
  ],
  "sideEffects": false,
